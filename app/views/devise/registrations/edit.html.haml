.container.user-new{:action => ""}
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit #{resource_name.to_s.humanize}
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = devise_error_messages!
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :username, :placeholder => 'Username', autofocus: true
            .user-image.col-md-2.preview-uploaded-image
              %button.btn.btn-primary Add image
              = f.file_field :image

          = f.email_field :email, placeholder: 'E-Mail', class: 'user-email'
          = f.password_field :current_password, autocomplete: "off", placeholder: 'Current Password', class: 'user-password'
          = f.password_field :password, autocomplete: "off", placeholder: 'New Password', class: 'user-password'
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'New Password Confirmation', class: 'user-password'

          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, :placeholder => "Profile"
          %h4 Occupation
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :occupation, :placeholder => "Occupation"
          %h4 Position
          .user-name_image.row
            .user-name.col-md-12
              = f.text_field :position, :placeholder => "Position"
          .row.text-center.user-btn
            = f.submit 'Update', class: 'btn btn-lg btn-primary btn-block'

    %p
      %hr
    %h3 Delete account
    %p
      Unhappy?
      .row.text-center.user-btn
        = button_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-lg btn-block'

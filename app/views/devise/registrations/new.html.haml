.container.user-new{:action => ""}
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Register
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :username, :placeholder => 'Username', autofocus: true
            .user-image.col-md-2
              %button.btn.btn-primary Add image
              = f.file_field :image

          = f.email_field :email, placeholder: 'E-Mail', class: 'user-email'
          = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'user-password'
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation', class: 'user-password'

          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, :placeholder => "Profile"
          %h4 Occupation
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :occupation, :placeholder => "Occupation"
          %h4 Position
          .user-name_image.row
            .user-name.col-md-12
              = f.text_field :position, :placeholder => "Position"
          .row.text-center.user-btn
            = f.submit 'Sign Up', class: 'btn btn-lg btn-primary btn-block'

.container
  .form-signin
    %h2.form-signin-heading Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %p
        = f.label :email, class: 'sr-only'
        = f.email_field :email, autofocus: true, placeholder: 'Email adress', id: 'inputEmail', class: 'form-control'
      %p
        = f.label :password, class: 'sr-only'
        = f.password_field :password, autocomplete: "off", placeholder: 'Password', id: 'inputEmail', class: 'form-control'
      - if devise_mapping.rememberable?
        %p
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        = f.submit "Sign in", class: 'btn btn-lg btn-primary btn-block'
  .text-center
    %p
      Not a member?
      =link_to 'Sign up now', new_user_registration_path
